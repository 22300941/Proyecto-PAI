<Window x:Class="WPFProyecto_PAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="1000" MinHeight="500" MinWidth="800" >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="PAQUETERIA"
               Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="24"
               Margin="0,0,0,10"/>

        <TabControl x:Name="tabContenedor" SelectionChanged="tabContenedor_SelectionChanged" Grid.Row="1">

            <!-- =============== PESTAÑA TRABAJADORES =============== -->
            <TabItem Header="Trabajadores" >
                <Grid Margin="10">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="254.2"/>
                        <ColumnDefinition Width="45.8"/>
                        <ColumnDefinition Width="43*"/>
                        <ColumnDefinition Width="175*"/>
                    </Grid.ColumnDefinitions>

                    <!-- =============== CAMPOS =============== -->
                    <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2">
                        <StackPanel Margin="0,0,10,0">

                            <Label Content="ID"/>
                            <TextBox x:Name="txtID" IsReadOnly="True"/>

                            <Label Content="Nombre"/>
                            <TextBox x:Name="txtNombre"/>

                            <Label Content="Apellido"/>
                            <TextBox x:Name="txtApellido"/>

                            <Label Content="Puesto"/>
                            <TextBox x:Name="txtPuesto"/>

                            <Label Content="Hora Inicio (HH:mm)"/>
                            <TextBox x:Name="txtHoraInicio"/>

                            <Label Content="Hora Fin (HH:mm)"/>
                            <TextBox x:Name="txtHoraFin"/>

                            <Label Content="Día"/>
                            <TextBox x:Name="txtDia"/>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- =============== TABLA =============== -->
                    <DataGrid x:Name="dgTabla"
                  Grid.Row="0"
                  Grid.Column="2"
                  Margin="10,0,0,0"
                  AutoGenerateColumns="True"
                  SelectionChanged="dgTabla_SelectionChanged" Grid.ColumnSpan="2"/>

                    <!-- =============== BOTONES =============== -->
                    <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="197,10,0,0">

                        <Button x:Name="btnInsertar" Content="Insertar" Width="120" Height="36" Margin="10" Click="btnInsertar_Click"/>
                        <Button x:Name="btnEditar"   Content="Editar"   Width="120" Height="36" Margin="10" Click="btnEditar_Click"/>
                        <Button x:Name="btnEliminar" Content="Eliminar" Width="120" Height="36" Margin="10" Click="btnEliminar_Click"/>
                        <Button x:Name="btnLimpiar"  Content="Limpiar"  Width="120" Height="36" Margin="10" Click="btnLimpiar_Click"/>

                    </StackPanel>

                </Grid>
            </TabItem>

            <!-- Otras pestañas -->
            <TabItem Header="Servicios">
                <Grid Margin="10">
                    <Grid Margin="10,10,-10,-10">
                        <DataGrid x:Name="dgTabla_Servicio"
                            Grid.Row="0"
                            Margin="310,0,0,66"
                            AutoGenerateColumns="True"
                            SelectionChanged="dgTabla_Sucursales_SelectionChanged"/>
                        <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,654,66">
                            <StackPanel Margin="0,0,10,0">

                                <Label Content="ID"/>
                                <TextBox x:Name="txtID_servicio" IsReadOnly="True"/>

                                <Label Content="Descripcion"/>
                                <TextBox x:Name="txtDescripcion_servicio" Height="108"/>

                                <Label Content="Costo"/>
                                <TextBox x:Name="txtCosto_servicio"/>

                                <Label Content="ID del Paquete"/>
                                <ComboBox x:Name="cbPaquetes_servicio" Height="30"/>


                            </StackPanel>
                        </ScrollViewer>
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,408,0,0">

                            <Button x:Name="btnInsertar_servicio" Content="Insertar" Width="120" Height="36" Margin="10" Click="btnInsertar_servicio_Click"/>
                            <Button x:Name="btnEditar_servicio"   Content="Editar"   Width="120" Height="36" Margin="10" Click="btnEditar_servicio_Click"/>
                            <Button x:Name="btnEliminar_servicio" Content="Eliminar" Width="120" Height="36" Margin="10" Click="btnEliminar_servicio_Click"/>
                            <Button x:Name="btnLimpiar_servicio"  Content="Limpiar"  Width="120" Height="36" Margin="10" Click="btnLimpiar_servicio_Click"/>

                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            
            
            <TabItem Header="Paquetes">
                <Grid Margin="10">
                    <Grid Margin="10,10,-10,-10">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="254.2"/>
                            <ColumnDefinition Width="45.8"/>
                            <ColumnDefinition Width="43*"/>
                            <ColumnDefinition Width="175*"/>
                        </Grid.ColumnDefinitions>

                        <!-- =============== CAMPOS =============== -->
                        <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2">
                            <StackPanel Margin="0,0,10,0">

                                <Label Content="ID"/>
                                <TextBox x:Name="txtID_paquete" IsReadOnly="True"/>

                                <Label Content="Fecha de Entrada"/>
                                <DatePicker x:Name="dpFechaEntrada_paquetes"/>

                                <Label Content="Fecha de Salida"/>
                                <DatePicker x:Name="dpFechaSalida_paquetes"/>

                                <Label Content="Tipo de Paquete"/>
                                <TextBox x:Name="txtTipo_paquetes"/>

                                <Label Content="Código de Barras"/>
                                <TextBox x:Name="txtCodigoBarras_paquetes"/>

                                <Label Content="Sucursal"/>
                                <ComboBox x:Name="cbSucursal_paquetes" Height="20"/>

                                <Label Content="Cliente"/>
                                <ComboBox x:Name="cbCliente_paquetes" Height="20"/>

                                <Label Content="Proveedor"/>
                                <ComboBox x:Name="cbProveedor_paquetes" Height="20"/>

                            </StackPanel>
                        </ScrollViewer>

                        <!-- =============== TABLA =============== -->
                        <DataGrid x:Name="dgTabla_paquetes"
                      Grid.Row="0"
                      Grid.Column="2"
                      Margin="10,0,0,0"
                      AutoGenerateColumns="True"
                      SelectionChanged="dgTabla_paquetes_SelectionChanged"
                      Grid.ColumnSpan="2"/>

                        <!-- =============== BOTONES =============== -->
                        <StackPanel Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="4"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="197,10,0,0">

                            <Button x:Name="btnInsertar_paquetes" Content="Insertar"
                        Width="120" Height="36" Margin="10" Click="btnInsertar_paquetes_Click"/>

                            <Button x:Name="btnEditar_paquetes" Content="Editar"
                        Width="120" Height="36" Margin="10" Click="btnEditar_paquetes_Click"/>

                            <Button x:Name="btnEliminar_paquetes" Content="Eliminar"
                        Width="120" Height="36" Margin="10" Click="btnEliminar_paquetes_Click"/>

                            <Button x:Name="btnLimpiar_paquetes" Content="Limpiar"
                        Width="120" Height="36" Margin="10" Click="btnLimpiar_paquetes_Click"/>

                        </StackPanel>

                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Clientes">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="254.2"/>
                        <ColumnDefinition Width="45.8"/>
                        <ColumnDefinition Width="43*"/>
                        <ColumnDefinition Width="175*"/>
                    </Grid.ColumnDefinitions>

                    <!-- =============== CAMPOS =============== -->
                    <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2">
                        <StackPanel Margin="0,0,10,0">

                            <Label Content="ID"/>
                            <TextBox x:Name="txtID_clientes" IsReadOnly="True"/>

                            <Label Content="Nombre"/>
                            <TextBox x:Name="txtNombre_clientes"/>

                            <Label Content="Apellido"/>
                            <TextBox x:Name="txtApellido_clientes"/>

                            <Label Content="Teléfono"/>
                            <TextBox x:Name="txtTelefono_clientes"/>

                            <Label Content="Dirección"/>
                            <TextBox x:Name="txtDireccion_clientes"/>

                            <Label Content="Firma"/>
                            <TextBox x:Name="txtFirma_clientes"/>

                            <Label Content="Sucursal"/>
                            <ComboBox x:Name="cbSucursal_clientes" Height="30"/>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- =============== TABLA =============== -->
                    <DataGrid x:Name="dgTabla_clientes"
                  Grid.Row="0"
                  Grid.Column="2"
                  Margin="10,0,0,0"
                  AutoGenerateColumns="True"
                  SelectionChanged="dgTabla_clientes_SelectionChanged"
                  Grid.ColumnSpan="2"/>

                    <!-- =============== BOTONES =============== -->
                    <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="197,10,0,0">

                        <Button x:Name="btnInsertar_clientes" Content="Insertar" Width="120" Height="36" Margin="10" Click="btnInsertar_clientes_Click"/>
                        <Button x:Name="btnEditar_clientes"   Content="Editar"   Width="120" Height="36" Margin="10" Click="btnEditar_clientes_Click"/>
                        <Button x:Name="btnEliminar_clientes" Content="Eliminar" Width="120" Height="36" Margin="10" Click="btnEliminar_clientes_Click"/>
                        <Button x:Name="btnLimpiar_clientes"  Content="Limpiar"  Width="120" Height="36" Margin="10" Click="btnLimpiar_clientes_Click"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Sucursales">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="353*"/>
                        <ColumnDefinition Width="601*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="dgTabla_Sucursales"
                        Grid.Row="0"
                        Margin="310,0,0,66"
                        AutoGenerateColumns="True"
                        SelectionChanged="dgTabla_Sucursales_SelectionChanged" Grid.ColumnSpan="2"/>
                    <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,53,66">
                        <StackPanel Margin="0,0,10,0">

                            <Label Content="ID"/>
                            <TextBox x:Name="txtID_sucursales" IsReadOnly="True"/>

                            <Label Content="Nombre"/>
                            <TextBox x:Name="txtNombre_sucursales"/>

                            <Label Content="Direccion"/>
                            <TextBox x:Name="txtDireccion_sucursales"/>

                            <Label Content="Telefono"/>
                            <TextBox x:Name="txtTelefono_sucursales"/>

                        </StackPanel>
                    </ScrollViewer>
                    <StackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        Margin="197,408,0,0" Grid.ColumnSpan="2">

                        <Button x:Name="btnInsertar_sucursales" Content="Insertar" Width="120" Height="36" Margin="10" Click="btnInsertar_sucursales_Click"/>
                        <Button x:Name="btnEditar_sucursales"   Content="Editar"   Width="120" Height="36" Margin="10" Click="btnEditar_sucursales_Click"/>
                        <Button x:Name="btnEliminar_sucursales" Content="Eliminar" Width="120" Height="36" Margin="10" Click="btnEliminar_sucursales_Click"/>
                        <Button x:Name="btnLimpiar_sucursales"  Content="Limpiar"  Width="120" Height="36" Margin="10" Click="btnLimpiar_sucursales_Click"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Proveedores">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="254.2"/>
                        <ColumnDefinition Width="45.8"/>
                        <ColumnDefinition Width="43*"/>
                        <ColumnDefinition Width="175*"/>
                    </Grid.ColumnDefinitions>

                    <!-- =============== CAMPOS =============== -->
                    <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2">
                        <StackPanel Margin="0,0,10,0">

                            <Label Content="ID"/>
                            <TextBox x:Name="txtID_proveedores" IsReadOnly="True"/>

                            <Label Content="Nombre"/>
                            <TextBox x:Name="txtNombre_proveedores"/>

                            <Label Content="Teléfono"/>
                            <TextBox x:Name="txtTelefono_proveedores"/>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- =============== TABLA =============== -->
                    <DataGrid x:Name="dgTabla_proveedores"
                  Grid.Row="0"
                  Grid.Column="2"
                  Margin="10,0,0,0"
                  AutoGenerateColumns="True"
                  SelectionChanged="dgTabla_proveedores_SelectionChanged"
                  Grid.ColumnSpan="2"/>

                    <!-- =============== BOTONES =============== -->
                    <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="197,10,0,0">

                        <Button x:Name="btnInsertar_proveedores" Content="Insertar" Width="120" Height="36" Margin="10" Click="btnInsertar_proveedores_Click"/>
                        <Button x:Name="btnEditar_proveedores"   Content="Editar"   Width="120" Height="36" Margin="10" Click="btnEditar_proveedores_Click"/>
                        <Button x:Name="btnEliminar_proveedores" Content="Eliminar" Width="120" Height="36" Margin="10" Click="btnEliminar_proveedores_Click"/>
                        <Button x:Name="btnLimpiar_proveedores"  Content="Limpiar"  Width="120" Height="36" Margin="10" Click="btnLimpiar_proveedores_Click"/>

                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Transacciones" HorizontalAlignment="Right" Width="85">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Margin="10,10,-10,-10" Grid.ColumnSpan="2">
                        <DataGrid x:Name="dgTabla_transacciones"
                            Grid.Row="0"
                            Margin="310,0,0,66"
                            AutoGenerateColumns="True"
                            SelectionChanged="dgTabla_Sucursales_SelectionChanged"/>
                        <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="0,0,654,66">
                            <StackPanel Margin="0,0,10,0">

                                <Label Content="ID"/>
                                <TextBox x:Name="txtID_transacciones" IsReadOnly="True"/>

                                <Label Content=""/>
                                <DatePicker x:Name="dpFechaPago"/>


                                <Label Content="Total"/>
                                <TextBox x:Name="txtTotal_transacciones"/>

                                <Label Content="Método de Pago"/>
                                <TextBox x:Name="txtMetodo_transacciones"/>

                                <Label Content="ID del Paquete"/>
                                <ComboBox x:Name="cbPaquetes_transacciones"/>



                            </StackPanel>
                        </ScrollViewer>
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,408,0,0">

                            <Button x:Name="btnInsertar_transacciones" Content="Insertar" Width="120" Height="36" Margin="10" Click="btnInsertar_transacciones_Click"/>
                            <Button x:Name="btnEditar_transacciones"   Content="Editar"   Width="120" Height="36" Margin="10" Click="btnEditar_transacciones_Click"/>
                            <Button x:Name="btnEliminar_transacciones" Content="Eliminar" Width="120" Height="36" Margin="10" Click="btnEliminar_transacciones_Click"/>
                            <Button x:Name="btnLimpiar_transacciones"  Content="Limpiar"  Width="120" Height="36" Margin="10" Click="btnLimpiar_transacciones_Click"/>

                        </StackPanel>
                    </Grid>

                </Grid>
            </TabItem>

            <TabItem Header="Servicio-Paquete">
                <Grid Margin="10">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- PANEL DE ASIGNACIÓN -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">

                        <Label Content="Servicio"/>
                        <ComboBox x:Name="cbServicios_SP" Height="30"/>

                        <Label Content="Paquete"/>
                        <ComboBox x:Name="cbPaquetes_SP" Height="30"/>

                        <Button Content="Asignar Servicio a Paquete"
                            Height="36" Margin="0,15,0,0"
                            Click="btnAsignar_SP_Click"/>
                        <Button Content="Quitar Servicio de Paquete"
                            Height="36" Margin="0,10,0,0"
                            Click="btnQuitar_SP_Click"/>

                    </StackPanel>

                        <!-- TABLA RELACIÓN -->
                    <DataGrid x:Name="dgServiciosDePaquete"
                        Grid.Column="1"
                        AutoGenerateColumns="True"
                        Margin="10,0,0,0"/>

                </Grid>
            </TabItem>

            <TabItem Header="Sucursal-Cliente">
                <Grid Margin="10">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- PANEL DE ASIGNACIÓN -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">

                        <Label Content="Sucursal"/>
                        <ComboBox x:Name="cbSucursales_SC" Height="30"/>

                        <Label Content="Cliente"/>
                        <ComboBox x:Name="cbClientes_SC" Height="30"/>

                        <Button Content="Asignar Cliente a Sucursal"
                            Height="36" Margin="0,15,0,0"
                            Click="btnAsignar_SC_Click"/>

                        <Button Content="Quitar Cliente de Sucursal"
                            Height="36" Margin="0,10,0,0"
                            Click="btnQuitar_SC_Click"/>

                    </StackPanel>

                    <!-- TABLA RELACIÓN -->
                    <DataGrid x:Name="dgClientesDeSucursal"
                        Grid.Column="1"
                        AutoGenerateColumns="True"
                        Margin="10,0,0,0"/>

                </Grid>
            </TabItem>
                                                                                                                                                                                                                                                                                                                


        </TabControl>
    </Grid>
</Window>
