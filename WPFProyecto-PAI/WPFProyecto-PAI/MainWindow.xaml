<Window x:Class="WPFProyecto_PAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="1000" MinHeight="500" MinWidth="800" >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="PAQUETERIA"
               Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="24"
               Margin="0,0,0,10"/>

        <TabControl x:Name="tabContenedor" SelectionChanged="tabContenedor_SelectionChanged" Grid.Row="1">

            <!-- =============== PESTAÑA TRABAJADORES =============== -->
            <TabItem Header="Trabajadores" >
                <Grid Margin="10">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="43*"/>
                        <ColumnDefinition Width="175*"/>
                    </Grid.ColumnDefinitions>

                    <!-- =============== CAMPOS =============== -->
                    <ScrollViewer Grid.Row="0" Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,0,10,0">

                            <Label Content="ID"/>
                            <TextBox x:Name="txtID" IsReadOnly="True"/>

                            <Label Content="Nombre"/>
                            <TextBox x:Name="txtNombre"/>

                            <Label Content="Apellido"/>
                            <TextBox x:Name="txtApellido"/>

                            <Label Content="Puesto"/>
                            <TextBox x:Name="txtPuesto"/>

                            <Label Content="Hora Inicio (HH:mm)"/>
                            <TextBox x:Name="txtHoraInicio"/>

                            <Label Content="Hora Fin (HH:mm)"/>
                            <TextBox x:Name="txtHoraFin"/>

                            <Label Content="Día"/>
                            <TextBox x:Name="txtDia"/>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- =============== TABLA =============== -->
                    <DataGrid x:Name="dgTabla"
                  Grid.Row="0"
                  Grid.Column="1"
                  Margin="10,0,0,0"
                  AutoGenerateColumns="True"
                  SelectionChanged="dgTabla_SelectionChanged" Grid.ColumnSpan="2"/>

                    <!-- =============== BOTONES =============== -->
                    <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="197,10,0,0">

                        <Button x:Name="btnInsertar" Content="Insertar" Width="120" Height="36" Margin="10" Click="btnInsertar_Click"/>
                        <Button x:Name="btnEditar"   Content="Editar"   Width="120" Height="36" Margin="10" Click="btnEditar_Click"/>
                        <Button x:Name="btnEliminar" Content="Eliminar" Width="120" Height="36" Margin="10" Click="btnEliminar_Click"/>
                        <Button x:Name="btnLimpiar"  Content="Limpiar"  Width="120" Height="36" Margin="10" Click="btnLimpiar_Click"/>

                    </StackPanel>

                </Grid>
            </TabItem>

            <!-- Otras pestañas -->
            <TabItem Header="Servicios">
                <Grid Margin="10">
                    <TextBlock Text="Servicios"/>
                </Grid>
            </TabItem>
            <TabItem Header="Paquetes">
                <Grid Margin="10">
                    <TextBox HorizontalAlignment="Left" Margin="107,178,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <Label Content="Label" HorizontalAlignment="Left" Margin="125,134,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="Clientes">
                <Grid Margin="10">
                    <TextBlock Text="Clientes"/>
                </Grid>
            </TabItem>
            <TabItem Header="Sucursales">
                <Grid Margin="10">
                    <TextBlock Text="Sucursales"/>
                </Grid>
            </TabItem>
            <TabItem Header="Proveedores">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="941*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Proveedores" Grid.ColumnSpan="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Transacciones">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,0,10,0">

                            <Label Content="ID"/>
                            <TextBox x:Name="txtIDtransaccion" IsReadOnly="True"/>

                            <Label Content="Fecha de pago"/>
                            <TextBox x:Name="txtFechaPago" IsReadOnly="True"/>

                            <Label Content="Total"/>
                            <TextBox x:Name="txtTotal" IsReadOnly="True"/>

                            <Label Content="Método de pago"/>
                            <TextBox x:Name="txtMetodoPago" IsReadOnly="True"/>

                            <Label Content="ID paquete"/>
                            <TextBox x:Name="txtIDpaquete" IsReadOnly="True"/>

                        </StackPanel>
                    </ScrollViewer>

                    <DataGrid x:Name="dgTablaTransacciones"
            Grid.Column="1"
            Margin="10,0,0,122"
            AutoGenerateColumns="True"
            SelectionChanged="dgTabla_SelectionChanged"/>
                    <Button x:Name="btnInsertarTrans" Content="Insertar" HorizontalAlignment="Left" Margin="207,391,0,0" VerticalAlignment="Top" Height="36" Width="131" Grid.ColumnSpan="2"/>
                    <Button x:Name="btnActualizarTrans" Content="Actualizar" HorizontalAlignment="Left" Margin="65,391,0,0" VerticalAlignment="Top" Height="36" Width="131" Grid.Column="1"/>
                    <Button x:Name="btnEliminarTrans" Content="Eliminar" HorizontalAlignment="Left" Margin="227,391,0,0" VerticalAlignment="Top" Height="36" Width="131" Grid.Column="1"/>
                    <Button x:Name="btnLimpiarTrans" Content="Limpiar" HorizontalAlignment="Left" Margin="391,391,0,0" VerticalAlignment="Top" Height="36" Width="131" Grid.Column="1"/>

                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
